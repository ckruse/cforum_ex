    <label class="radio"><%= radio_button @fo, :"close_vote_action_not-constructive", "hide" %> <%= gettext("hide („delete“) subtree") %></label>
    <label class="radio"><%= radio_button @fo, :"close_vote_action_not-constructive", "_DEFAULT_", checked: blank?(@settings.options["close_vote_action_not-constructive"]) %> <%= default_value(@conn, :close_vote_votes) %></label>
