  <div class="cf-cgroup">
    <label for="settings-close_vote-illegal"><%= gettext("result for illegal posting close votes") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_illegal, "close" %> <%= gettext("close subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_illegal, "hide" %> <%= gettext("hide („delete“) subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_illegal, "_DEFAULT_", checked: blank?(@settings.options["close_vote_action_illegal"]) %> <%= default_value(@conn, :close_vote_votes) %></label>
  </div>

  <div class="cf-cgroup">
    <label for="settings-close_vote-duplicate"><%= gettext("result for duplicate posting close votes") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_duplicate, "close" %> <%= gettext("close subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_duplicate, "hide" %> <%= gettext("hide („delete“) subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_duplicate, "_DEFAULT_", checked: blank?(@settings.options["close_vote_action_duplicate"]) %> <%= default_value(@conn, :close_vote_votes) %></label>
  </div>

  <div class="cf-cgroup">
    <label for="settings-close_vote-custom"><%= gettext("result for custom close votes") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_custom, "close" %> <%= gettext("close subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_custom, "hide" %> <%= gettext("hide („delete“) subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_custom, "_DEFAULT_", checked: blank?(@settings.options["close_vote_action_custom"]) %> <%= default_value(@conn, :close_vote_votes) %></label>
  </div>

  <div class="cf-cgroup">
    <label for="settings-close_vote-spam"><%= gettext("result for spam close votes") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_spam, "close" %> <%= gettext("close subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_spam, "hide" %> <%= gettext("hide („delete“) subtree") %></label>
    <label class="radio"><%= radio_button @fo, :close_vote_action_spam, "_DEFAULT_", checked: blank?(@settings.options["close_vote_action_spam"]) %> <%= default_value(@conn, :close_vote_votes) %></label>
