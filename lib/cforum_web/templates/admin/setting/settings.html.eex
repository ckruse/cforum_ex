  <div class="cf-cgroup">
    <label for="settings-close_vote_votes"><%= gettext("Number of votes necessary to close a vote") %></label>
    <%= number_input @fo, :close_vote_votes, id: "settings-close_vote_votes" %>
    <label class="checkbox"><%= default_checkbox(@fo, @settings, :close_vote_votes) %> <%= default_value(@conn, :close_vote_votes) %></label>
  </div>

  <div class="cf-cgroup">
    <label for="settings-close_vote-off-topic"><%= gettext("result for off-topic posting close votes") %></label>
    <label class="radio"><%= radio_button @fo, :"close_vote_action_off-topic", "close" %> <%= gettext("close subtree") %></label>
    <label class="radio"><%= radio_button @fo, :"close_vote_action_off-topic", "hide" %> <%= gettext("hide („delete“) subtree") %></label>
    <label class="radio"><%= radio_button @fo, :"close_vote_action_off-topic", "_DEFAULT_", checked: blank?(@settings.options["close_vote_action_off-topic"]) %> <%= default_value(@conn, :close_vote_votes) %></label>
