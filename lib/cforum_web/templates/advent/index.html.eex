<ol class="cf-advent-calendar-list year-<%= @year %>">
  <%= for day_no <- 1..24 do %>
    <li class="<%= if past?(@year, day_no, @today), do: "open", else: "closed" %>">
      <span class="day"><%=  day_no %></span>
      <%= render "day.html", Map.merge(assigns, %{day: find_day(@advent_calendar_days, day_no), day_no: day_no}) %>
    </li>
  <% end %>
</ol>
